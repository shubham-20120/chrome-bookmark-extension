{
    "manifest_version": 2,
    "name": "P Extensions",
    "version": "0.1",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_icon": "easy.jpg",
        "default_popup": "sketch/index.html"
    },
    "commands": {
        "open": {
            "suggested_key": {
                "default": "Alt + J"
            },
            "description": "opening popup"
        }
    },
    "permissions": [
        "storage"
    ]
}